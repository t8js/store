{
  "name": "@t8/store",
  "version": "1.1.2",
  "description": "Vanilla JS/TS data store",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npx npm-run-all clean compile",
    "clean": "node -e \"require('node:fs').rmSync('dist', {force: true, recursive: true});\"",
    "compile": "npx esbuild index.ts --bundle --outdir=dist --platform=neutral",
    "prepublishOnly": "npm run build",
    "preversion": "npx npm-run-all typecheck shape test",
    "shape": "npx codeshape",
    "test": "npx npm-run-all build test:compile test:run",
    "test:compile": "npx esbuild tests.ts --bundle --outdir=dist --platform=neutral",
    "test:run": "node dist/tests.js",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t8js/store.git"
  },
  "keywords": [
    "shared state",
    "store"
  ],
  "author": "axtk",
  "license": "ISC",
  "devDependencies": {
    "typescript": "^5.9.2"
  }
}
