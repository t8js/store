{
  "name": "@t8/store",
  "version": "1.3.4",
  "description": "Vanilla JS/TS data container offering subscription to its updates",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "clean": "node -e \"require('node:fs').rmSync('dist', { force: true, recursive: true });\"",
    "compile": "npx esbuild index.ts --bundle --outdir=dist --platform=neutral",
    "preversion": "npx npm-run-all clean shape compile test",
    "shape": "npx codeshape --typecheck --emit-types",
    "test": "node tests.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t8js/store.git"
  },
  "keywords": [
    "shared state",
    "store"
  ],
  "author": "axtk",
  "license": "MIT"
}
